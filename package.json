{
  "scripts": {
    "build:sass": "npx sass scss/style.scss dist/assets/style.css",
    "watch:sass": "npm run build:sass -- --watch",
    "build:html": "npx js-msg src dist",
    "build": "npx npm-run-all build:*",
    "serve": "npx npm-run-all --parallel watch:*",
    "release": "git subtree push --prefix dist origin master"
  },
  "devDependencies": {
    "js-msg": "git@github.com:mechpen/js-msg.git",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.7",
    "markdown-it-katex": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.5"
  }
}
